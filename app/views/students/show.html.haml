.container
  = render "shared/student"
  .row.profile
    = render "shared/student_side_nav"
    .span8
      %h6 TIMELINE
      -if @activities.count == 0
        .activity
          %p.description.error This student doesn't have any activity yet.
      - else
        - @activities.each do |activity|
          .activity
            = image_tag activity.user.image, class: "img-activity"
            .activity-description
              %h6.time= format_time(activity.created_at)
              %p.description <b>#{activity.user.name}</b> #{activity.description} <b>#{activity.student.name}</b>.