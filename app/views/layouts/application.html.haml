!!!
%html
  %head
    %title StudentLab
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar.navbar-top
      .navbar-inner
        .container
          = image_tag "http://jumpstartlab.com/images/logo-mark.png", class: "brand"
          = link_to "StudentLab", root_path, class: "brand"
          .nav-collapse.collapse
            - if current_user
              %ul.nav
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    Students
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to "All Students", feed_path
                    %li.divider
                    - @students.each do |student|
                      %li
                        = link_to "#{student.name}", student_path(student.id)
                    %li.divider
                    %li
                      = link_to "Add a Student", new_student_path
              %ul.nav
                = image_tag current_user.image, class: "img-circle nav"
                %p.nav #{current_user.email}
              %ul.nav
                = link_to "Sign out", signout_path, class: "nav"
            /   %ul.nav
            /     = link_to "Near Plans", near_plans_path, class: "nav"
            /   %ul.nav
            /     = link_to "All Plans", plans_path, class: "nav"
            /   %ul.nav
            /     = link_to "All Concerts", concerts_path, class: "nav"
            /   %ul.nav.pull-right
            / - else
            /   %ul.nav.pull-right
            /     = link_to "Sign in with Facebook", "/auth/facebook", class: "nav"
    - if flash.notice
      .alert= flash.notice
    - elsif flash.alert
      .alert.alert-error= flash.alert
    = yield